@using CMS.MHH.Models
@model LoginViewModel
@{
    ViewBag.Title = "Sign in";
}

<div class="row">
    <div class="col-md-8 centerfix">
        <section id="loginForm" style="text-align:center">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div id="title">
                    <span class="fa fa-user-circle" id="icon"></span>
                    <h4>@ViewBag.Title</h4>
                </div><br/>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="logininfo">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="logininfo">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group" style="padding-bottom: 10px">
                    <div class="col-md-6">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>  
                    <div class="col-md-6">
                        <button type="submit" class="btn btn-default" id="loginbtn">
                            Sign in
                        </button>
                    </div>
                </div>
            }
        </section>
    </div>
</div>
<style>
    #loginForm {
        border: 0.5px; 
        border-radius: 10px; 
        background-color: white; 
        box-shadow: 0 0 3px 1px rgba(0, 0, 0, 0.2);
        margin: 100px 15%;
        padding: 40px 0;
        text-align: center
    }
    
    .centerfix{
        text-align: center;
        width: 60%;
        margin: auto 20%;
    }

    .logininfo{
        width: 60%;
        margin: 5px 20% 0 20%;
    }

    #title {
        text-align:center;
        padding-top: 20px;
    }

    /*#registerbtn {
        transition: background-color 0.4s, border-color 0.4s, top 0.4s, box-shadow 0.4s;        
    }*/

    #icon {
       font-size: 70px;
       color: cornflowerblue;  
    }

    #loginbtn {
        background-color: cornflowerblue;
        color: white;
        outline: none;
      }

    .checkbox {
        color: cornflowerblue;
        margin-left: 20%;
    }
    
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}