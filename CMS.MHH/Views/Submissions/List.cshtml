@model IEnumerable<CMS.MHH.Models.Submission>

@{
    ViewBag.Title = "Submit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-1.11.1.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
@section scripts {
    @Scripts.Render("~/bundles/bootstrap-datetimepicker")
}
@section styles {
    @Styles.Render("~/Content/bootstrap-datetimepicker")
}

@if (TempData["message"] != null)
{
    <script>alert('@TempData["message"]');</script>
}
@foreach (var item in Model)
{
    <div class="col-md-4 col-sm-5 col-xs-8" style="background-color:lavender;margin: 10px">
        <div class="event-box" style="margin:3px;">
            <h2 class="card-title">Submissions</h2>
            <div class="card-body">
                <h4 class="card-title">
                    @Html.Label("Title: ")
                    @Html.DisplayFor(modelItem => item.Name)
                </h4>
                <p class="card-text">
                    @Html.Label("Description: ")
                    @Html.DisplayFor(modelItem => item.Description)
                </p>
                <p class="card-text">
                    @Html.Label("Closure date: ")
                    @Html.DisplayFor(modelItem => item.Closure_date)
                </p>
                <p class="card-text">
                    @Html.Label("Final Clousure date:")
                    @Html.DisplayFor(modelItem => item.Final_closure_date)
                </p>
                @Html.ActionLink("Submit new idea", "Create", "Ideas", new { id = item.Id }, null)

            </div>
        </div>
    </div>
}