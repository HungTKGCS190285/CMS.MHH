@using CMS.MHH.ViewModel
@model List<FileVM>
@{
    ViewBag.Title = "Files";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
    @using (Html.BeginForm("CreateZipFile", "Files", new { FormMethod.Post }))
    {
        @Html.AntiForgeryToken()
        <table class="table">
            <tr>
                <th></th>
                <th>File Name</th>
            </tr>

            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td>
                        @Html.CheckBoxFor(m => m[i].IsChosen)
                        @Html.HiddenFor(m => m[i].FileName)
                        @Html.HiddenFor(m => m[i].FilePath)
                    </td>
                    <td>
                        @Html.DisplayFor(m => m[i].FileName)
                    </td>
                </tr>
            }
        </table>
        <br />
        <label>Check All</label>
        <input type="checkbox" id="checkAll" value="Check All" />
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    }

    @Html.ActionLink("Export", "Export", "Files")
</body>

<script>
    $("#checkAll").click(function () {
        $('input:checkbox').not(this).prop('checked', this.checked);
    });
</script>

