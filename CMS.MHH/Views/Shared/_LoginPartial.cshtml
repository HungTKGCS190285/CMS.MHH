@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="/Manage" id="loginInfo" style="color:white" title="Manage"><span class="glyphicon glyphicon-user"></span></a>
        </li>
        <li><a id="loginInfo" style="color:white" href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink loginInfo", style = "color:white" })</li>
    </ul>
}

<style>
    #loginInfo{
        color:white
    }

    #loginInfo:hover{
        text-decoration:underline;
    }
</style>