@model  PagedList.IPagedList<CMS.MHH.Models.Idea>
@using PagedList.Mvc
@using PagedList

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" style="font-size:12px">
    <tr>
        <th>
            Submission
        </th>
        <th>
            Category Name
        </th>
        <th>
            Title
        </th>
        <th>
            Description
        </th>
        <th>
            Author Email
        </th>
        <th>
            Anonymous
        </th>
        <th>
            Content
        </th>
        <th>
            Date
        </th>
        <th>
            Document Name
        </th>
        <th>
            View
        </th>
        <th>
            Like
        </th>
        <th>
            Dislike
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Submission.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cate.Category_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author_Email)
            </td>
            <td id="checkbox">
                @Html.DisplayFor(modelItem => item.IsAnonymous)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @if (item.DocumentName != null)
                {
                    @Html.ActionLink(item.DocumentName, "Download", "Ideas", new { id = item.Id }, null)
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.View)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThumbsUp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThumbsDown)
            </td>
            <td>
                <a class="glyphicon glyphicon-pencil" href="/Categories/Edit/?id=@item.Id" id="edit"></a>
                <a class="glyphicon glyphicon-list" href="/Categories/Details/?id=@item.Id" id="details"></a>
                <a class="glyphicon glyphicon-trash" href="/Categories/Delete/?id=@item.Id" id="delete"></a>
            </td>
        </tr>
    }

</table>
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
<style>
    h2 {
        color: cornflowerblue;
    }

    .table {
        overflow: hidden;
        border-collapse: collapse;
        border-radius: 10px;
        margin-left: auto;
        margin-right: auto;
        box-shadow: 0 0 3px 1px rgba(0, 0, 0, 0.2);
    }

    th {
        text-align: center;
        color: white;
        background-color: cornflowerblue;
    }

    td {
        background-color: white;
        font-size: 15px;
    }

    #checkbox {
        text-align: center; 
    }

    #edit, #details, #delete {
        font-size: 18px;
        margin: 5px;
    }

        #edit:link, #edit:visited {
            text-decoration: none;
        }

        #edit:hover, #edit:active {
            text-decoration: none;
        }

        #details:link, #details:visited {
            text-decoration: none;
        }

        #details:hover, #details:active {
            text-decoration: none;
        }

        #delete:link, #delete:visited {
            text-decoration: none;
        }

        #delete:hover, #delete:active {
            text-decoration: none;
        }
</style>

